<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tableLayout1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/editText1"
            android:enabled="false" />
        <GridLayout
            android:id="@+id/gridLayout1"
            android:backgroundTint="#ffffd600"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:columnCount="5"
            android:rowCount="5">
            <Button
                android:text="←"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:id="@+id/buttonBackSpace"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="Clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_margin="1dp"
                android:layout_columnSpan="2"
                android:id="@+id/buttonClear"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="±"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonChangeSign"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="√"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonSqrt"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum7"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum8"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum9"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonDivide"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="%"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonProcent"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum4"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum5"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum6"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="*"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonMultipe"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="1/x"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonInverse"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum1"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum2"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonNum3"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonSubtract"
                android:backgroundTint="#ff0d47a1" />
            <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_rowSpan="2"
                android:id="@+id/buttonResult"
                android:backgroundTint="#ff0d47a1" />
             <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_margin="1dp"
                android:layout_columnSpan="2"
                android:id="@+id/buttonNum0"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text=","
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonMakeDecimal"
                android:backgroundTint="#ff2196f3" />
            <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:layout_columnSpan="1"
                android:id="@+id/buttonAdd"
                android:backgroundTint="#ff0d47a1" />
        </GridLayout>
    </TableLayout >
</RelativeLayout>